<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Foreground Service 권한 -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_CONNECTED_DEVICE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Bluetooth 권한 (Android 12+) -->
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN" android:usesPermissionFlags="neverForLocation" />

    <!-- 네트워크 권한 (Wear 통신용) -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".HandApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_hand"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_hand_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Hand">

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <activity
            android:name=".feature.auth.SignInActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.hand.hand.care.CareActivity" />
        <activity android:name="com.hand.hand.care.CareSafeZone1Activity" />
        <activity android:name="com.hand.hand.care.CareSafeZone2Activity" />
        <activity android:name="com.hand.hand.care.CareSafeZone3Activity" />
        <activity android:name="com.hand.hand.care.CareSafeZone4Activity" />
        <activity android:name="com.hand.hand.care.CareSafeZone5Activity" />
        <activity android:name="com.hand.hand.care.CareSafeZone6Activity" />
        <activity android:name="com.hand.hand.care.CareSafeZone7Activity" />
        <activity  android:name="com.hand.hand.care.CareSafeZone8Activity" />
        <activity android:name="com.hand.hand.ui.admin.AdminHomeActivity" />
        <activity android:name="com.hand.hand.diary.DiaryHomeActivity" />
        <activity android:name="com.hand.hand.diary.DiaryDetailActivity" />
        <activity android:name="com.hand.hand.diary.DiaryWriteActivity" />
        <activity android:name="com.hand.hand.feature.auth.SignUpActivity" />
        <activity android:name="com.hand.hand.feature.auth.SignInTypeActivity" />
        <activity android:name="com.hand.hand.ui.home.HomeActivity" />
        <activity android:name="com.hand.hand.feature.auth.SignUpManagerActivity" />
        <activity android:name="com.hand.hand.feature.auth.SignUpPrivateActivity" />
        <activity android:name="com.hand.hand.ui.home.stats.MoodChangeActivity" />
        <activity android:name="com.hand.hand.ui.personal.detail.PersonalWeeklyDetailActivity" />
        <activity android:name="com.hand.hand.ui.personal.PersonalCareActivity" />
        <activity android:name="com.hand.hand.ui.admin.member.MemberDetailActivity" />
        <activity android:name="com.hand.hand.feature.auth.SignUpPrivateSurveyActivity" />
        <activity android:name="com.hand.hand.feature.auth.SignUpPrivateSurvey2Activity" />
        <activity android:name="com.hand.hand.feature.auth.SignUpPrivateSurvey3Activity" />
        <activity android:name="com.hand.hand.feature.auth.SignUpPrivateSurvey4Activity" />
        <activity android:name="com.hand.hand.AiDocument.PrivateAiDocumentHomeActivity" />
        <activity android:name="com.hand.hand.AiDocument.PrivateAiDocumentActivity" />
        <activity android:name="com.hand.hand.AiDocument.TeamAiDocumentActivity" />
        <activity android:name="com.hand.hand.ui.test.WearTestActivity" />

        <!-- Wear 앱으로부터 생체 데이터를 백그라운드에서 수신하는 Foreground Service -->
        <service
            android:name=".wear.WearListenerForegroundService"
            android:foregroundServiceType="connectedDevice"
            android:exported="false" />

        <!-- FCM 메시지 수신 서비스 -->
        <service
            android:name=".fcm.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>